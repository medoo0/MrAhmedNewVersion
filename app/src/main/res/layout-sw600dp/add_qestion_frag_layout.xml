<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/color5"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/contains"
                android:layout_margin="25dp"
                android:elevation="15dp"
                android:padding="10sp"
                android:background="@drawable/styling_of_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10sp"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_icon_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:text="Question"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="13dp"
                        android:textSize="30sp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content" />



                </LinearLayout>



                <LinearLayout
                    android:layout_margin="10dp"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/writeQuestion"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:textSize="40sp"
                        android:textColor="@color/black1"
                        android:textDirection="ltr"
                        android:hint="@string/Q_One"
                        android:background="@drawable/shape_layout"
                        android:fontFamily="@font/cairo"
                        android:layout_height="wrap_content"

                        />





                </LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/reltwo"
                android:layout_below="@+id/contains"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="15dp"
                android:layoutDirection="ltr"
                android:padding="10sp"
                android:background="@drawable/styling_of_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/linearinrelativetwo"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10sp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_answersicons" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:text="Answers"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="13dp"
                        android:textSize="30sp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layoutDirection="ltr"
                    android:layout_below="@+id/linearinrelativetwo"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="A-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="30dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:id="@+id/answerOne"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:hint=" First Answer"
                            android:textSize="30sp"
                            android:textDirection="ltr"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/cairo"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="B-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="30dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:id="@+id/answerTwo"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:hint="Second Answer "
                            android:textSize="30sp"
                            android:textDirection="ltr"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo"
                            />



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="40dp"
                            android:text="C-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="30dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:id="@+id/answerThree"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:hint="Third Answer"
                            android:textDirection="ltr"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:textSize="30sp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo"
                            />



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="D-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="30dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <EditText
                            android:id="@+id/answerFour"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:hint="Fourth Answer"
                            android:textDirection="ltr"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textSize="30sp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:fontFamily="@font/cairo"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>






                </LinearLayout>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/answercontaner"
                android:layout_width="match_parent"
                android:layout_below="@+id/reltwo"
                android:elevation="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="10sp"
                android:background="@drawable/styling_of_view"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/atherliner"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10sp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_answersicons" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:text="Correct Answer"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="13dp"
                        android:textSize="30sp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content" />




                </LinearLayout>



                <LinearLayout
                    android:layoutDirection="ltr"
                    android:layout_below="@+id/atherliner"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                    <Button
                        android:id="@+id/A"
                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:textColor="@color/black1"
                        android:fontFamily="@font/cairo"
                        android:text="A"
                        android:background="@drawable/radiobutton_check_false"
                        android:layout_height="wrap_content" />


                    <Button
                        android:id="@+id/B"
                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:text="B"
                        android:textSize="30sp"
                        android:textColor="@color/black1"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/cairo"
                        android:background="@drawable/radiobutton_check_false"
                        android:layout_height="wrap_content" />
                    <Button

                        android:id="@+id/C"
                        android:layout_marginStart="10sp"
                        android:fontFamily="@font/cairo"
                        android:textColor="@color/black1"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_margin="5dp"
                        android:text="C"
                        android:background="@drawable/radiobutton_check_false"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/D"
                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black1"
                        android:layout_margin="5dp"
                        android:textSize="30sp"
                        android:fontFamily="@font/cairo"
                        android:text="D"
                        android:background="@drawable/radiobutton_check_false"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/answercontaner"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/savingData"
                    android:text="Save"
                    android:padding="15sp"
                    android:elevation="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:background="@drawable/button_background3"
                    android:fontFamily="@font/cairo"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="100dp"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"

                    />

            </RelativeLayout>



        </RelativeLayout>









    </ScrollView>




</RelativeLayout>