<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiantcolor"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">


    <com.google.android.gms.ads.doubleclick.PublisherAdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/publisherAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.doubleclick.PublisherAdView>

    <ScrollView
        android:layout_width="match_parent"
        android:isScrollContainer="false"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_height="match_parent">


        <RelativeLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tvregister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"

                    android:text="مرحبا عزيزي المستخدم"
                    android:fontFamily="@font/cairo"
                    android:textSize="30dp"
                    android:textColor="@color/registercolor"

                    />


                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal"
                    android:text="يرجي أدخال كود الطالب"
                    android:textColor="@color/registercolor"
                    android:textSize="25sp" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:paddingStart="10sp"
                    android:layout_marginStart="20sp"
                    android:padding="10dp"
                    android:background="@android:color/white"
                    android:layout_marginEnd="20sp"
                    android:layout_marginTop="30dp"
                    android:paddingEnd="10sp"
                    android:layoutDirection="rtl"
                    android:layout_height="wrap_content">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/codeStudent"
                        android:layout_width="match_parent"
                        android:hint="كود الطالب"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="20sp"
                        android:textDirection="rtl"
                        android:fontFamily="@font/cairo"
                        android:background="@color/registercolor"
                        android:paddingTop="10sp"
                        android:inputType="phone"
                        android:paddingBottom="15dp"
                        android:layout_height="wrap_content" />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_marginEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:layout_height="1dp"/>


                <Button
                    android:id="@+id/searching"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="30dp"
                    android:text="البحث"
                    android:fontFamily="@font/cairo"
                    android:textSize="25sp"
                    android:textColor="@color/color2"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="ملحوظه هامه.   يمكنك الحصول علي الكود من خلال أستاذ القسم او الطالب"
                    android:fontFamily="@font/cairo"
                    android:textSize="25sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20sp"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    android:textColor="@color/registercolor"
                    android:layout_height="wrap_content" />

            </LinearLayout>











        </RelativeLayout>














    </ScrollView>


</RelativeLayout>