<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/color3"
    >



    <ScrollView
        android:id="@+id/scrollingscroll"
        android:background="@color/color3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">





                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Details_layout"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/CardContainsyearName"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/toolbar_background"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:elevation="8dp"
                        android:padding="5dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/toolbar_background"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/unitNameeeeTv"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/cairo"
                                android:text="First Unit"
                                android:textColor="@android:color/white"
                                android:textSize="25sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:id="@+id/yearNameeeTv"
                                android:fontFamily="@font/cairo"
                                android:text="الصف الاول الثانوي"
                                android:textColor="@android:color/white"
                                android:textSize="25sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>







                <android.support.v7.widget.CardView
                    android:id="@+id/presstoshowexams"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Details_layout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    android:padding="5dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/cairo"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/examList"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="20dp"
                                android:layout_weight="0"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_examsicon" />

                        </LinearLayout>



                    </LinearLayout>





                </android.support.v7.widget.CardView>








                <android.support.v7.widget.CardView
                    android:id="@+id/presstoshowMyResult"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Details_layout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    android:padding="5dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layoutDirection="rtl"

                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/cairo"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/MyResult"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="20dp"
                                android:layout_weight="0"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_results" />

                        </LinearLayout>



                    </LinearLayout>





                </android.support.v7.widget.CardView>





                <android.support.v7.widget.CardView
                    android:id="@+id/presstoshowQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/Details_layout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    android:padding="5dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layoutDirection="rtl"

                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/cairo"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/questions"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="20dp"
                                android:layout_weight="0"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/questionsicon" />

                        </LinearLayout>



                    </LinearLayout>



                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:id="@+id/presstoShowResults"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Details_layout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    android:padding="5dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"

                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/cairo"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/results"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="20dp"
                                android:layout_weight="0"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_results" />

                        </LinearLayout>



                    </LinearLayout>



                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/presstoShowstudentRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Details_layout"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:elevation="8dp"
                    android:padding="5dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/cairo"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/studentRequest"
                                android:textColor="@android:color/black"
                                android:textSize="25sp" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="20dp"
                                android:layout_weight="0"
                                android:padding="5dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_icon_qq" />

                        </LinearLayout>



                    </LinearLayout>



                </android.support.v7.widget.CardView>











            </LinearLayout>




        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
