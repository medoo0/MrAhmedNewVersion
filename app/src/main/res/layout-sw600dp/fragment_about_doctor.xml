<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/color3"
    >



    <ScrollView
        android:id="@+id/scroll"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/group2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:elevation="8dp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/aboutDoctor"
                    android:textColor="@android:color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />





            </LinearLayout>

            <LinearLayout
                android:id="@+id/essamphotoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="rtl"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/ahmed"
                    android:elevation="8dp" />

                <TextView
                    android:id="@+id/Doctorname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"

                    />

            </LinearLayout>











            <android.support.v7.widget.CardView
                android:id="@+id/connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/essamphotoLayout"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:elevation="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/cairo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/Personal_Data"
                        android:textColor="@android:color/black"
                        android:textSize="30dp" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

























            <android.support.v7.widget.CardView
                android:id="@+id/Press_on_CardView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/connection"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:elevation="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/Personal_Data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/cairo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/phoneN"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/image_dropdown"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="20sp"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calling" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/Details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/Press_on_CardView"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/toolbar_background"
                android:visibility="gone">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/numberone"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />




                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/hobby"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />






                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/websites1"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />




                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/websites2"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />




                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/websites3"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />


                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo"
                    android:text="@string/Xzena"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    />




            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/Press_on_CardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Details_layout"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/experiences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/cairo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/experiences"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/image_dropdown2"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="20sp"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/facebookicon" />

                </LinearLayout>


            </android.support.v7.widget.CardView>








            <android.support.v7.widget.CardView
                android:id="@+id/facebookgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Press_on_CardView2"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/cairo"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/acadmyface"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />

                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="20sp"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/facebookgroup" />

                </LinearLayout>


            </android.support.v7.widget.CardView>



















            <LinearLayout
                android:id="@+id/Details_layout2"
                android:background="@drawable/toolbar_background"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Press_on_CardView2"
                >






                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="10dp"
                    android:text="@string/one"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />





                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/two"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />





                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/three"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />







                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/four"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />




                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/five"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />





                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/sex"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />




                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo"
                    android:padding="5dp"
                    android:text="@string/sexplus"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />





            </LinearLayout>


        </RelativeLayout>

    </ScrollView>




    <com.google.android.gms.ads.doubleclick.PublisherAdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/publisherAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.doubleclick.PublisherAdView>

</FrameLayout>
