<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color3"
    android:layout_margin="5dp">




    <android.support.v7.widget.CardView
        android:id="@+id/Press_on_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimage"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="15dp"
                android:background="@drawable/ic_student_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/txNameStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:gravity="right"
                        android:padding="1dp"
                        android:text="علاء محمود حسين"
                        android:textColor="@color/color2"
                        android:textSize="16sp"
                        android:textStyle="bold" />




                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/con"
                    android:fontFamily="@font/cairo"
                    android:text="مصر"
                    />





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        >


                        <TextView

                            android:id="@+id/hidetext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:layout_marginEnd="40dp"
                            android:textColor="@android:color/white"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="20dp"
                            android:background="@drawable/gradiantcolor"
                            android:fontFamily="@font/cairo"
                            android:gravity="center"
                            android:text="خاص بي"
                            android:visibility="gone"



                            />


                        <Button
                            android:id="@+id/addstudent"
                            android:layout_width="30dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ic_addthistomestudent" />



                    </RelativeLayout>



            </LinearLayout>

            <ImageView
                android:id="@+id/image_dropdown"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dropdown" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/Details_layout"
        android:background="@drawable/toolbar_background"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:layout_height="200dp">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray"
            android:id="@+id/line2" />

        <LinearLayout
            android:id="@+id/phone_Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignStart="@+id/line1"
            android:layout_alignEnd="@+id/line2"
            android:layout_alignTop="@+id/line2"
            android:layout_alignBottom="@+id/line1"
            android:background="@drawable/ripple"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="@string/phone"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="00201121341098"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mobile_phone"
                android:padding="2dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/email_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignStart="@+id/line2"
            android:layout_alignEnd="@+id/line1"
            android:layout_alignTop="@+id/line2"
            android:layout_alignBottom="@+id/line1"
            android:background="@drawable/ripple"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="@string/email"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="Android@example.com"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mail"
                android:padding="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ban_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignStart="@+id/line1"
            android:layout_alignEnd="@+id/line2"
            android:layout_alignTop="@+id/line1"
            android:layout_alignBottom="@+id/line2"
            android:background="@drawable/ripple"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/txStudentban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:text="@string/banned"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/banImag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_ban"
                android:padding="2dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/MYResult_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignStart="@+id/line2"
            android:layout_alignEnd="@+id/line1"
            android:layout_alignTop="@+id/line1"
            android:layout_alignBottom="@+id/line2"
            android:background="@drawable/ripple"
            android:clickable="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:gravity="center"
                android:text="@string/StudentResult"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>