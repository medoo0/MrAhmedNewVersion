<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiantcolor"
    tools:context="com.developer.mohamedraslan.hossamexams.Views.Exam"
    android:keepScreenOn="true"
    android:layoutDirection="rtl"
    >
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/Liner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/styling_of_view"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_clock" />

                <TextView
                    android:id="@+id/Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_vertical"
                    android:text="00:00:00"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <RelativeLayout

                android:id="@+id/contains"
                android:layout_margin="10dp"
                android:elevation="15dp"
                android:padding="10sp"
                android:background="@drawable/styling_of_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Liner1"
                >




                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10sp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_icon_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:fontFamily="@font/cairo"
                        android:text="Question"
                        android:textColor="@color/black1"
                        android:textSize="16sp" />



                </LinearLayout>



                <LinearLayout
                    android:layout_margin="10dp"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Question"
                        android:layout_marginBottom="10sp"
                        android:paddingStart="10sp"
                        android:paddingEnd="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:textSize="18sp"
                        android:textColor="@color/black1"
                        android:textDirection="ltr"
                        android:hint="@string/Q_One"
                        android:background="@drawable/shape_layout"
                        android:fontFamily="@font/cairo"
                        android:layout_height="wrap_content"

                        />





                </LinearLayout>



            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/reltwo"
                android:elevation="15dp"
                android:padding="10sp"
                android:layout_below="@+id/contains"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/styling_of_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:id="@+id/linearinrelativetwo"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10sp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_answersicons" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/cairo"
                        android:text="Choose The Correct Answer"
                        android:layout_marginStart="13dp"
                        android:textSize="16sp"
                        android:textColor="@color/black1"
                        android:layout_height="wrap_content" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layoutDirection="ltr"
                    android:layout_below="@+id/linearinrelativetwo"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="A-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <Button
                            android:id="@+id/answerOne"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:text="Answer One"
                            android:textDirection="rtl"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/cairo"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="B-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <Button
                            android:id="@+id/answerTwo"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:text="Answer Two"
                            android:textDirection="rtl"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo"
                            />



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="40dp"
                            android:text="C-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <Button
                            android:id="@+id/answerThree"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:text="Answer Three"
                            android:textDirection="rtl"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo"
                            />



                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="40dp"
                            android:text="D-"
                            android:padding="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black1"
                            android:layout_height="wrap_content" />


                        <Button
                            android:id="@+id/answerFour"
                            android:layout_marginStart="10sp"
                            android:background="@drawable/radiobutton_check_false"
                            android:text="Answer Four"
                            android:textDirection="rtl"
                            android:gravity="center|center_vertical"
                            android:layout_width="match_parent"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:fontFamily="@font/cairo"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layoutDirection="ltr"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="end"
                        >
                        <Button
                        android:id="@+id/Next"
                        android:layout_margin="10dp"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_background2"
                        android:fontFamily="@font/cairo"
                        android:text="@string/Next"
                        android:textColor="@color/color1"
                        android:textSize="16sp"
                       />
                        <Button
                            android:id="@+id/Skip"
                            android:layout_margin="10dp"
                            android:layout_width="115dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/cairo"
                            android:text="@string/Skip"
                            android:textColor="@color/color2"
                            android:textSize="16sp"
                             />
                        
                    </LinearLayout>
                    



                </LinearLayout>



            </RelativeLayout>









        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
