<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:id="@+id/relativefocus"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/presstoshowdetailsofYears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/essamphotoLayout"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:elevation="8dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/name_of_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/cairo"
                android:gravity="center_horizontal|center_vertical"
                android:text="الصف الاول الازهري"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_dropdownn"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="0"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_dropdown" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/Details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/presstoshowdetailsofYears"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/toolbar_background"
        android:visibility="gone">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/essamphotoLayout"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/numberStudentinThisYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="يوجد 25 طالب"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/studentdep" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20sp"
            android:elevation="8dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/numberExamsinThisYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="يوجد 50 اختبار"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/studentdep" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20sp"
            android:elevation="8dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/numberQuestioninThisYears"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/cairo"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="يوجد 50 سؤال"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:layout_weight="0"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/studentdep" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>